<!--create.wxml查看详情页面-->
<view class="page">
  <view class="page__bd">
    <form>
      <view class="weui-cells__title">出差人信息</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">出差人</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-input">{{leaveName}}</view>
          </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">所在科室</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-input">{{deptName}}</view>
          </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">目的地</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-input">{{location}}</view>
          </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">开始日期</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-input">{{startDate}}</view>
          </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">结束日期</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-input">{{endDate}}</view>
          </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">任务安排人</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-input">{{taskName}}</view>
          </view>
        </view>
      </view>
    </form>
  </view>
</view>