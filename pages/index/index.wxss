/**index.wxss**/

.imgUrl {
  width: 100%;
  height:200px;
}

.head {
  display: flex;
  flex-direction: row;
  background: #f5f5f5;
  width: 100%;
  padding: 0rpx 0rpx 3rpx 0rpx;
  align-items: center;
  justify-content: space-between;
}

.to {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 0rpx;
}

.page__bd {
  height: 100%;
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 0px;
  text-align: center;
}

.weui-navbar {
  background: #fff;
}

.list_title, .list_desc {
  text-align: left !important;
}

.list_title {
  color: black;
  font-size: 0.85rem;
}

.list_desc {
  margin: 5rpx 0rpx;
  color: #444;
}

.to1 {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 19px;
}

.list_over {
  margin-left: 100rpx;
}

.list_icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
}

.weui-media-box__info__meta text {
  margin: 0rpx 33rpx;
}

.list_tm {
  float: right;
  color: indianred;
  font-size: 0.8rem;
}

.weui-media-box__info__meta {
  padding-right: 0.2rem !important;
}

.add {
  position: fixed;
  bottom: 30px;
  right: 30px;
}

.add image {
  width: 80rpx;
  height: 80rpx;
}

.weui-media-box__info{
  margin-top:10px;
  padding-bottom:0px;
}

.weui-media-box__info__meta .firsttext {
  margin:0rpx 0rpx;
}

.index-banner{
	width: 100%;
	height: 440rpx;
}
.index-banner .slide-image{
	width: 100%;
}
.wx-swiper-dot text{
	background: #f00;
}